<h2>New Movie</h2>
<form action="/movies/{{movie._id}}/edit" method="POST">
<label> Title
    <input value="{{movie.title}}" type="text" name="title">
</label>
<label> Genre
    <input value="{{movie.genre}}" type="text" name="genre">
</label>
<label> Plot
    <input value="{{movie.plot}}" type="text" name="plot">
</label> 
<label> Cast
    <select name="cast" multiple> Cast
    {{#each celebritiesSelected}}
    <option value="{{this.celebrity._id}}"
    {{#if this.selected}}
    selected
    {{/if}}
    >{{this.celebrity.name}}</option>
    {{/each}}
</select>
</label>

<button type="submit">Submit</button>
</form>
